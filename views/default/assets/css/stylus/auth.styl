
.auth {
    text-align: center;

    & .icon {
        width: 14px;
        height: 14px;
        fill: #929594;
        position: absolute;
        top: 50%;
        left: 7px;
        transform: translateY(-50%);
    }

    & input {
        display: inline-block;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        padding: 14px 14px 14px 28px;
        border: none;
        background-color: #f4f8f7;
        color: #878988;
        box-sizing: border-box;
    }

    & label {
        position: relative;
        display: block;
        width: 60%;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 11px;
        box-sizing: border-box;
    }

    & a {
        display: inline-block;
        margin-top: 7px;
        font-size: 13px;
        padding-bottom: 3px;
        color: #373a3a;
        text-decoration: none;
        border-bottom: 2px solid #eff5f3;
    }

    &  .button {
        display: block;
        margin-top: 17px;
        margin-left: auto;
        margin-right: auto;
    }
}

.auth-title {
    font-size: 2em;
    color: #3aa9ab;
    text-align: center
}