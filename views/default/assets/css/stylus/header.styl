header.header {
    height: 125px;
}

.header_top {
    border-bottom: 1px solid #e9e9e9;
    height: 50%;

    & ul {
        padding-left: 0px;
        margin-top: 0px;
        margin-bottom: 0px;
    }

    & a {
        text-decoration: none;
        color: #919191
    }
    & > .right {
        height: 100%;
        text-align: right;

        & > .row {
            height: 100%;
        }
    }
}

.header_form_search {
    display: inline-block;
    border-left: 1px solid #c2c2c2;
    padding-left: 7px;

    & button {
        width: 14px;
        height: 17px;
        vertical-align: middle;
        cursor: pointer;
        padding-left: 0px;
        padding-right: 0px;
        border: none;
        background-color: transparent;

        & > svg {
            width: 100%;
            height: 100%;
            fill: #919191;
            transition: fill .3s ease;
        }

        &:hover > svg {
            fill: orangered;
        }
    }

    & input {
        vertical-align: middle;
        border: none;
        display: inline-block;
        color: #919191;
    }
}

.header_buttom {
    height: 50%;

    & .nav-link:first-child {
        margin-left: 0px;
    }
}

.nav-link {
    margin-left: 11px;
    color: #464343;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: none;
    transition: color .3s ease;
    
    &:hover {
        color: $linkHover;
    }
}