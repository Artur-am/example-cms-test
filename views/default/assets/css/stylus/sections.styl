.line-title {
    display: block;
    width: 100%;
    margin-top: 0px;
    line-height: 47px;
    text-align: center;
    position: relative;

    &::before {
        content: "";
        width: 100%;
        height: 1px;
        position: absolute;
        top: 50%;
        left: 0px;
        transform: translateY(-50%);
        background-color: #e9e9e9;
    }

    & > span {
        position: relative;
        z-index: 3;
        padding-left: 7px;
        padding-right: 7px;
        background-color: #fff;
    }
}
.section {
    margin-bottom: 27px;
}
.section-body {
    text-align: center;
}