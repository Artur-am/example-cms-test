.cloud-lists {
    width: 95%;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    box-shadow: inset 0 0 50px #dfdfdfa6;
}
.tags {
    display: block;
    width: 100%;
    padding-top: 17px;
    padding-bottom: 17px;

    & > a {
        display: inline-block;
        padding: .5em 1rem;
        text-decoration: none;
        box-shadow: inset 0 0 2px #d2d2d2;
        background-image: linear-gradient(to right, orangered 15%, #000 98%);
        background-clip: border-box;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

        &:hover {
            box-shadow: inset 0 0 3px #d2d2d2;
            position: relative;
            z-index: 9;
        }
    }
}