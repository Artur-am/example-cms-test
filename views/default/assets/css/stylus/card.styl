.card {
    display: inline-block;
    width: 300px;
    height: 300px;
    margin-left: 3px;
    margin-right: 3px;
    margin-bottom: 11px;
    overflow: hidden;
    vertical-align: top;
    border: 7px solid #e9e9e9;
    border-radius: 3px;
    position: relative;

    & > a {
        display: block;
        width: 100%;
        height: 100%;
        & > .img {
            width: 100%;
            height: 100%;
            filter: grayscale(75%);
            object-fit: cover;
            object-position: center 50%;
        }
    }

    & .description {
        position: absolute;
        top: 50%;
        transform: translateY(-50%) scale(0);
        padding-top: 7px;
        padding-bottom: 7px;
        width: 100%;
        text-align: center;
        background-color: #7100d714;
        box-shadow: inset -1px 0px 60px #d2d2d28a;
        transition: .3s ease;

        & > a {
            text-decoration: none;
        }

        & .text {
            color: #fff;
            text-shadow: 0 0 2px #000;
            font-size: 15px;
            letter-spacing: 2px;
        }
    }

    
    &:hover {
        & .img {
            filter: grayscale(0);
            transform: scale(1.11,1.17);
            transition-timing-function: ease-out;
            transition-duration: 550ms;
        }

        & .description {
            transform: translateY(-50%) scale(1);
        }
    }
}