.comment {
    margin-bottom: 17px;
}
.comment-title {
    display: block;
    width: 100%;
    font-size: 1.8em;
    text-decoration: none;
    white-space: nowrap;
    overflow: hidden;
    background: linear-gradient(to right, #5d00e8 10%, #ff005d 30%);
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}
.comment-text {
    text-shadow: 0 0 2px #c6c6c6;
    letter-spacing: 2px;
    margin-top: 3px;
    display: block;
}


.comment-form label {
    display: block;
    color: #aaa;
}
.input-text {
    margin-left: 7px;
    margin-top: 7px;
    margin-bottom: 7px;
    border: 1px solid #e3e3e3;
    padding: .5em 1em;
    width: 100%;
}
.button {
    background-color: #dbdbdb;
    border: 1px solid #e4e4e4;
    padding: .7em 2em;
    color: #777373;
    box-shadow: inset 0 0 2px #fff;
    transition: .3s ease;
    cursor: pointer;
}
.button:hover {
    color: orangered;
    box-shadow: inset 0 0 5px #fff;
}
